{
    "type": "page",
    "page": [
        {
            "type": "header",
            "header": {
                "text": "Create club"
            }
        },
        {
            "type": "form",
            "form": {
                "action": "example/clubs/store",
                "method": "get",
                "items": [
                    {
                        "type": "text",
                        "text": {
                            "name": "name",
                            "label": "Name of club",
                            "value": "FC Twente"
                        }                        
                    },
                    {
                        "type": "password",
                        "password": {
                            "name": "secret",
                            "label": "Secret to success"
                        }
                    },
                    {
                        "type": "checkbox",
                        "checkbox": {
                            "name": "leagues",
                            "label": "Jupiler",
                            "value": true,
                            "checked": true
                        }
                        
                    },
                    {
                        "type": "password",
                        "password": {
                            "name": "token",
                            "label": "Token"
                        }
                    },
                    {
                    
                        "type": "number",
                        "number": {
                            "name": "no_member",
                            "label": "Number of members",
                            "value": "2"

                        }
                    },
                    {
                        "type": "textarea",
                        "textarea": {
                            "name": "description",
                            "label": "Description"
                        }
                    },
                    {
                        "type": "trumbowyg",
                        "trumbowyg": {
                            "name": "site_description",
                            "label": "Site description"
                        }
                    },
                    {
                        "type": "submit",
                        "submit": {
                            "value": "Create!"
                        }
                    }
                ]
            }
        }
    ]
}