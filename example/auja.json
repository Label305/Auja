{
    "type": "main",
    "main": {
        "title": "Auja example",
        "authenticated": true,
        "debug": true,
        "colors": {
            "main": "#1ebab8",
            "secondary": "#E7EFEF",
            "alert": "#e85840"
        },
        "user": {
            "name": "Joris Blaak"
        },
        "buttons": [
            {
                "text": "Logout",
                "target": "#logout"
            }
        ],
        "menu": [
            {
                "title": "Clubs",
                "icon": "planet",
                "target": "clubs/menu"
            }
        ],
        "routes": [
            {
                "type": "http",
                "target": "login",
                "action": "login.json"
            },
            {
                "type": "http",
                "target": "clubs/menu",
                "action": "clubs_menu.json"
            },
            {
                "type": "http",
                "target": "clubs/create",
                "action": "clubs_create.json"
            },
            {
                "type": "http",
                "target": "clubs/store",
                "action": "clubs_store.json"
            },
            {
                "type": "http",
                "target": "clubs/{id}/edit",
                "action": "clubs_edit.json"
            }
        ],
        "authentication": {
            "type": "form",
            "form": {
                "action": "login",
                "method": "get",
                "items": [
                    {
                        "type": "header",
                        "header": {
                            "text": "Auja Example"
                        }
                    },
                    {
                        "type": "text",
                        "text": {
                            "name": "username",
                            "label": "Username"
                        }

                    },
                    {
                        "type": "password",
                        "password": {
                            "name": "password",
                            "label": "Password"
                        }
                    },
                    {
                        "type": "submit",
                        "submit": {
                            "name": "Login"
                        }
                    }
                ]
            }
        }
    }
}